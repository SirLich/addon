{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "sirlich:board",
			"basic_render_parameters": {
				"material": "particles_opaque",
				"texture": "textures/particles/tile"
			}
		},
		"components": {
			"minecraft:emitter_initialization": {
				"creation_expression": "v.posx = 0 ;v.posz = 0;v.size = 20;v.total = v.size * v.size; v.scale = 0.2;"
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 50
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 40
			},

			"minecraft:emitter_rate_steady": {
				"spawn_rate": 10,
				"max_particles": "v.total"
			},
			"minecraft:emitter_shape_point": {
				"offset": ["v.posz = (v.posx == v.size - 1) ? v.posz + 1 : v.posz ; return v.posz;", 0, "v.posx = (v.posx < v.size) ? v.posx + 1 : 0 ; return v.posx;"]
			},
			"minecraft:particle_appearance_billboard": {
				"size": [" v.scale", " v.scale"],
				"facing_camera_mode": "direction_y",
				"direction": {
					"mode": "custom",
					"custom_direction": [1, 0, 0]
				},
				"uv": {
					"texture_width": 2,
					"texture_height": 1,
					"uv": [0, 0],
					"uv_size": [1, 1]
				}
			},
			"minecraft:particle_lifetime_events": {
				"creation_event": "run"
			}
		},
		"events": {
			"run": {
				"particle_effect": {
					"effect": "sirlich:tile",
					"type": "emitter",
					"pre_effect_expression": "v.posx = t.posx; v.posz = t.posz;"
				},
				"expression": "t.posx = v.posx; t.posz = v.posz; v.scale = 0.05;"
			}
		}
	}
}